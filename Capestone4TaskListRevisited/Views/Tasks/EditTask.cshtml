
@{
    ViewData["Title"] = "EditTask";
}
@model Tasks

<h1>Edit Tasks</h1>
<form action="../Tasks/EditTask" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />
    Task Description: <input type="text" name="TaskDescription" value="@Model.TaskDescription" /><br />

      Due Date:@Html.EditorFor(model => model.DueDate,
        new { htmlAttributes = new { @class = "form-control date-picker",  @style = "width:20%; height:30px;"} })<br/>


    Completed: <input type="checkbox" name="Completed" value="true" />
    Not Completed: <input type="checkbox" name="Completed" value="false" />
    @*Completed?: <input type="checkbox" name="Completed" value="true" />
        <input type="hidden" name="Completed" value="false" />*@


    <input type="submit" value="Edit Task" /><br />


</form>

